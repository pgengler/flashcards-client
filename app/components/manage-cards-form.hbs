<form id="manage-cards" {{on "submit" (prevent-default this.saveCards)}}>
  <table class="table">
    <tbody>
      {{#each this.listItems as |item|}}
        <tr data-test-card>
          <td>
            <input type="checkbox" value={{item.card.id}} checked={{item.checked}} />
          </td>
          <td>
            {{item.card.front}}
          </td>
          <td>
            {{item.card.back}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <button type="submit" class="btn btn-primary">
    Save
  </button>
</form>
