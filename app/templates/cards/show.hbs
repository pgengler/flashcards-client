{{#if this.isEditing}}
  <form class='edit_card' {{on 'submit' this.save}}>
    <fieldset>
      <label for='front'>Front</label>
      <Textarea @value={{this.editFront}} id='front' />

      <label for='back'>Back</label>
      <Textarea @value={{this.editBack}} id='back' />

      <div>
        <button type='submit' class='btn'>
          Save
        </button>
        <button type='button' {{on 'click' this.deleteCard}} class='btn btn-danger'>Delete</button>
      </div>
    </fieldset>
  </form>
{{else}}
  <FlippableCard @card={{this.card}} @side={{this.sideToDisplay}} @flipped={{this.flipped}} />
  <button type='button' class='btn btn-default' {{on 'click' this.edit}}>Edit</button>
{{/if}}
