<h1>{{@model.name}}</h1>

{{#if @model.cards}}
  <table class="table" data-test-card-list>
    <thead>
      <tr>
        <th>Front</th>
        <th>Back</th>
      </tr>
    </thead>
    <tbody>
      {{#each @model.cards as |card|}}
        <tr data-test-card>
          <td>{{card.front}}</td>
          <td>{{card.back}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  {{!-- link to "new card" page --}}
{{/if}}
